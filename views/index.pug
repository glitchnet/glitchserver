extend layout

block content
  canvas#octagon(width=700, height=700)
  #canvas-wrapper
    canvas#face(width=500, height=444)
  .links
    p.credits credits
    p.webring webring
    if session
      a(href='/logout') log out
  #overlay
    p altered background gif - original from&#xa0;
      a(href='http://mrdiv.tumblr.com/post/140708245587/pixeltunneler') mrdiv
    p music
      iframe(height='100' scrolling='no', frameborder='no', src='https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/11409224&amp;color=00cc11&amp;auto_play=true&amp;hide_related=true&amp;show_comments=true&amp;show_user=false&amp;show_reposts=false')

  #message
    input(type='text', placeholder='say something')
    input(type='hidden', id='mid')
    button(type='button') send
  #incoming
  #messages-incoming
  footer

block scripts
  script(src='/js/footer.js')
  script(src='/app.bundle.js')
